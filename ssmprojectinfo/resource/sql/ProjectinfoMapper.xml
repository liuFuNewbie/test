<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.accp.dao.ProjectinfoMapper">
	<select id="getProjectinfoCount" parameterType="long" resultType="int">
		select count(id) from projectinfo
		<if test="status>=0">
			<trim prefix="where" prefixOverrides="and|or">
				and status=#{status}
			</trim>
		</if>
	</select>
	<select id="getProjectinfoByStatus" parameterType="map"
		resultType="com.accp.pojo.Projectinfo">
		select * from projectinfo
		<if test="status>=0">
			<trim prefix="where" prefixOverrides="and|or">
				and status=#{status}
			</trim>
		</if>
		order by id limit #{pageSupport.index},#{pageSupport.pageSize}
	</select>
</mapper>
